.header-container {
    position: fixed; 
    top: 0;
    width: 100%;
    background: #fff;
    z-index: 99999;
  }
.container {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  .header {
    background-color: #ffffff;
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
    z-index:99;
    margin-bottom: 20rpx;
  }  
  .search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
  }
  .icon {
    width: 14px;
    height: 14px;
    margin-left: 12px;
    margin-right: 8px;
  }
  .bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    display: inline-block;
    height: 34px;
    width: 500rpx;
    font-size: 14px;
  }
  .in-bar {
    color: #999;
  }
  .cancel-img {
    width: 14px;
    height: 14px;
    margin-right: 10px;
  }
  .cancel {
    line-height: 34px;
    width: 60px;
    text-align: center;
    display: inline-block;
    border: none;
  }

  .songs-container {
    
    margin: 0 20rpx;
    font-size: 35rpx;
    border-bottom: 1px solid #f5f5f5;
    margin-bottom: 10px;
    padding-bottom: 10px;
}
.songs {
  display: flex;
  justify-content: space-between;
}
.each-song {
    padding-right: 100rpx;
}
.each-song .songauthor {
  font-size: 14px;
  color: #999;
}
.arrowright{
  margin-top: 10px;
  width: 25px;
  height: 25px;
}