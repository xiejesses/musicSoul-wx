<!--components/search/search-cmp.wxml-->
<view class="container">
<view wx:if="{{!searchPanel}}" class="container">
   <view class="header">
     <view class='box' bind:tap="onActivateSearch">
      <image src="/images/icon/search.png" />
      <text>搜索书籍</text>
    </view> 
  </view> 
</view>

  <view class="header">
    <view class="search-container">
      <image class="icon" src="/images/search.png" />
      <input placeholder-class='in-bar' placeholder='歌曲名' class='bar' bind:confirm="onConfirm" value="{{q}}" auto-focus="true" />
      <image bind:tap="onDelete" class="cancel-img" src="/images/cancel.png" />
    </view>
    <view class='cancel' bind:tap="onCancel">取消</view>
  </view>
</view>