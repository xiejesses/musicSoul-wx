.header-container {
    position: fixed; 
    top: 0;
    width: 100%;
    background: #fff;
    z-index: 99999;
  }
  .header-nav {
    margin-top: 30px;
    margin-left: 20px;
 }
 .header-nav image {
     width: 20px;
     height: 20px;
 }
.container {

}
.top-container {
    padding-left: 50rpx;
}
.user-profile {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.name-pic {
    display: flex;
    align-items: center;
}
.name-pic .name {
    margin-left: 10px;
}
.pic image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}
.edit {
    padding-right: 50rpx;
}
.edit image{
    width: 30px;
    height: 30px;
}

.albumdetail {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}
.albumdetail .intro {
    padding-right: 30px;
}
.intro .albumname {
    font-size: 22px;
    font-weight: 450;
    margin-top: 5px;
    margin-bottom: 10px;
}
.intro .albumdes {
    font-size: 18px;
    color:rgb(82, 82, 82)
}

.album-pic image {
    width: 100px;
    height: 150px;
    border-radius: 8px 0 0 8px;
}

.user-action {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    align-items: center;
    padding-bottom: 20px;
}
.user-action .love {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50px;
    width: 50px;
    box-shadow:0px 0px 5px 5px #f5f5f5;
    /* border: 1px solid red; */
}
.user-action .love image{
    width: 30px;
    height: 30px;
}
.user-action .share {
    padding-right: 50rpx;
}
.user-action .share image{
    width: 30px;
    height: 30px;
}

/*下半部分*/
.bottom-container {
padding-left: 50rpx;
background: #f6f6f6;
}
.playlist-text {
    padding: 20px 0 10px 0;
}
.songlist-wrap .songlist {
    display: flex;
}
.songlist {
    padding:20px 0;
    border-bottom: 1px solid #ece8e8;
}
.songlist .song-pic image{
    width: 50px;
    height: 50px;
    border-radius: 5px;
}
.songlist .song-info {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
    padding-right: 20px;
    
}
.song-info .songname {
    white-space: nowrap;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 18px;
}
.song-info .songauthor {
    color: rgb(82, 82, 82);
    font-size: 15px;
}